<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niallod.quickbudget">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity android:name=".MainActivity"
            android:label="@string/overview_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddItem"
            android:label="@string/add_label"/>
        <activity android:name=".EditItem"
            android:label="@string/edit_label"/>
        <activity android:name=".RemoveItem"
            android:label="@string/delete_label"/>
        <activity android:name=".ItemModifyActivity"
            android:label="@string/edit_label"/>
    </application>

</manifest>